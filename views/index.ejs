        <script type="text/javascript" src="https://cdn.rawgit.com/arose/ngl/v2.0.0-dev.31/dist/ngl.js"></script>
  <script type="text/javascript">

  var config = {
    content: [{
      type: 'row',
      content:[{
        type: 'component',
        componentName: 'viewer',
        componentState: { label: 'A' },
        isClosable: false
      },{
        type: 'column',
        content:[{
          type: 'component',
          componentName: 'details',
          componentState: { description: '' }
        },{
          type: 'component',
          componentName: 'settings',
          componentState: { label: '' }
        }]
      }]
    }]
  };

  var myLayout = new GoldenLayout( config );

  myLayout.registerComponent( 'settings', function( container, componentState ){
    container.getElement().html("<div id='optionsContainer' style='width:100%; height:100%;background-color:white;'></div>");
  });

  myLayout.registerComponent( 'viewer', function( container, componentState ){
    container.getElement().html('<div id="viewport" style="width:100%; height:100%;background-color:white "></div>');
  });

  myLayout.registerComponent( 'details', function( container, componentState ){
    container.getElement().html( '<p id="description" style="width:100%; height:100%;background-color:white;"></p>' );
  });

  myLayout.init();

  myLayout.on( 'initialised', function( stack ){
    // Create NGL Stage object
	var stage = new NGL.Stage("viewport", { backgroundColor: "white" });

	stage.setSize('inherit', 'inherit');
	// Handle window resizing
	window.addEventListener( "resize", function( event ){
	    stage.handleResize();
	}, false );

	// Load PDB entry 1CRN
	stage.loadFile( "rcsb://5ktj", { defaultRepresentation: true } );
  });
	


</script>
</body>
